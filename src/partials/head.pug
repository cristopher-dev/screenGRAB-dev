head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no")
    
    // Favicons y app icons
    link(rel="apple-touch-icon" sizes="152x152" href="images/favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="images/favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="images/favicons/favicon-16x16.png")
    link(rel="manifest" href="images/favicons/site.webmanifest")
    link(rel="mask-icon" href="images/favicons/safari-pinned-tab.svg" color="#6366f1")
    
    // Meta tags de la app
    meta(name="apple-mobile-web-app-title" content="ScreenREC")
    meta(name="application-name" content="ScreenREC")
    meta(name="msapplication-TileColor" content="#6366f1")
    meta(name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)")
    meta(name="theme-color" content="#1a1a1a" media="(prefers-color-scheme: dark)")
    
    // SEO mejorado
    title ScreenREC - Grabador de Pantalla Web Simple y Elegante
    meta(name='title' content='ScreenREC - Grabador de Pantalla Web Simple y Elegante')
    meta(name='description' content='Graba tu pantalla fácilmente con ScreenREC. Selecciona el tipo de video, presiona grabar, revisa y descárgalo. Interfaz moderna y accesible.')
    meta(name='keywords' content='grabador pantalla, screen recorder, grabación video, captura pantalla, web recorder, grabar escritorio')
    meta(name='author' content='ScreenREC Team')
    meta(name='robots' content='index, follow')
    meta(name='language' content='ES')
    
    // Open Graph mejorado
    meta(property='og:type' content='website')
    meta(property='og:url' content='https://screen-rec.vercel.app/')
    meta(property='og:title' content='ScreenREC - Grabador de Pantalla Web Simple y Elegante')
    meta(property='og:description' content='Graba tu pantalla fácilmente con ScreenREC. Selecciona el tipo de video, presiona grabar, revisa y descárgalo. Interfaz moderna y accesible.')
    meta(property='og:site_name' content='ScreenREC')
    meta(property='og:locale' content='es_ES')
    
    // Twitter Card mejorado
    meta(property='twitter:card' content='summary_large_image')
    meta(property='twitter:url' content='https://screen-rec.vercel.app/')
    meta(property='twitter:title' content='ScreenREC - Grabador de Pantalla Web Simple y Elegante')
    meta(property='twitter:description' content='Graba tu pantalla fácilmente con ScreenREC. Interfaz moderna, accesible y fácil de usar.')
    meta(property='twitter:creator' content='@screenrec')
    
    // Precarga de fuentes para mejor rendimiento
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    
    // Structured data
    script(type="application/ld+json").
      {
        "@context": "https://schema.org",
        "@type": "WebApplication",
        "name": "ScreenREC",
        "description": "Grabador de pantalla web simple y elegante",
        "url": "https://screen-rec.vercel.app/",
        "applicationCategory": "MultimediaApplication",
        "operatingSystem": "Web Browser",
        "browserRequirements": "Requires JavaScript and modern browser",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        }
      }
    
    link(rel="stylesheet" href="scss/index.scss")
    
